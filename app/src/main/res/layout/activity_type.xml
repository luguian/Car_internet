<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0775e0"
        android:id="@+id/type_head">
        <ImageButton
            android:id="@+id/type_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:src="@drawable/back_clicked"
            android:enabled="true"/>
        <View
            android:id="@+id/imline"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/type_back"
            android:layout_marginLeft="8dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/choose_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="选择型号"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@id/imline"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_head">

        <View
            android:id="@+id/type_lineonebg"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/view_bg"
            />
    <RelativeLayout
        android:id="@+id/chooseed_brand"
        android:layout_below="@id/type_lineonebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selected_brandtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:textColor="#BF000000"
            android:text="奥迪"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#66000000"
            android:textSize="18dp"
            android:text="已选品牌"/>
    </RelativeLayout>
        <View
            android:id="@+id/type_linetwobg"
            android:layout_below="@id/chooseed_brand"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/view_bg"
            />
        <EditText
            android:id="@+id/edit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/type_linetwobg"
            android:layout_marginLeft="8dp"
            android:background="#00000000"
            android:hint="请自行输入型号"
            android:inputType="text"
            android:textColor="#BF000000"
            android:textColorHint="#BEBEBE"
            android:textSize="24dp" >
            <requestFocus />
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/edit_type"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="105dp"
            android:id="@+id/commit_cartype"
            android:layout_below="@id/type_linetwobg"
            android:layout_toRightOf="@id/edit_type"
            android:background="@drawable/button_shape"
            android:enabled="false"
            android:text="确认"
            android:textColor="#FFFFFF"/>
        <View
            android:id="@+id/type_linethreebg"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_below="@id/edit_type"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:background="#0775e0"/>
        <ListView
            android:id="@+id/type_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_below="@id/type_linethreebg"
            android:divider="@null">
        </ListView>
        <RelativeLayout
            android:id="@+id/car_typeshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/type_linethreebg"
            android:visibility="gone"
            android:background="@color/view_bg"
           >
        <TextView
            android:id="@+id/not_type"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="28dp"
            android:text="抱歉没找到对应品牌的型号    请自行输入"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>