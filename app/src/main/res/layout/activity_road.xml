    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/planningorigin_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/planningorigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/origin"
                    />

                <TextView
                    android:id="@+id/planningpoint_et"
                    android:layout_centerVertical="true"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/planningorigin"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:hint="请输入起始地"/>

            </RelativeLayout>

            <View
                android:id="@+id/planningline_one"
                android:layout_below="@id/planningorigin_rl"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="1px"
                android:background="@color/view_bg"/>
            <ImageView
                android:id="@+id/planningexchange_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exchange"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/planningline_one"/>


            <ImageView
                android:id="@+id/planningspeech_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speech"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/planningexchange_position"/>
            <RelativeLayout
                android:id="@+id/planningdestion_rl"
                android:layout_below="@id/planningline_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">



                <ImageView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/dest"
                    />

                <TextView
                    android:id="@+id/planningdestion_et"
                    android:layout_centerVertical="true"
                    android:layout_width="180dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/destination"
                    android:hint="请输入目的地"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
      <com.amap.api.maps.MapView
        android:id="@+id/planroute_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</LinearLayout>
