<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0775e0">
    <ImageButton
        android:id="@+id/ordertails_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:src="@drawable/back_clicked"
        android:enabled="true"/>
    <View
        android:id="@+id/ordertails_line"
        android:layout_width="1px"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ordertails_back"
        android:layout_marginLeft="8dp"
        android:background="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ordertails_line"
        android:textSize="20dp"
        android:text="订单详情"
        android:textColor="#FFFFFF"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/details_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orderdetaillogo"/>

        <TextView
            android:id="@+id/details_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/details_logo"
            android:layout_alignTop="@id/details_logo"
            android:text="商家已接单"
            android:textSize="16dp"
            android:textColor="#BF000000"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/gasolinestatetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/details_logo"
            android:text="汽油准备中"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/details_logo"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/drawback"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="申请退款"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/confimaddgasoline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/drawback"
            android:layout_marginLeft="20dp"
            android:text="确认加油"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_bg"
     >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="订单明细"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/car_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/addgasoline_car"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宝马"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
           />
    <View
        android:id="@+id/car_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/car_tv"
        android:background="@color/view_bg"/>

    <TextView
        android:id="@+id/gasoline_type"
        android:layout_below="@id/car_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="油种类"
        />

        <TextView
            android:id="@+id/addgasoline_type"
            android:layout_alignParentRight="true"
            android:layout_below="@id/car_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E90"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/gasoline_type"
            android:text="油量"/>

        <TextView
            android:id="@+id/gasoline_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_below="@id/gasoline_type"
            android:text="50升"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sum_numbertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="总计:"/>

        <TextView
            android:id="@+id/sum_numbervalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sum_numbertv"
            android:layout_marginLeft="10dp"
            android:text="￥56"
            android:textColor="#0775e0"/>

        <TextView
            android:id="@+id/favourable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sum_numbervalue"
            android:layout_marginLeft="10dp"
            android:text="优惠:"/>

        <TextView
            android:id="@+id/favourable_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/favourable_tv"
            android:layout_marginLeft="10dp"
            android:text="￥0.0"
            android:textColor="#0775e0"/>

        <TextView
            android:id="@+id/pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pay_value"
            android:layout_marginRight="10dp"
            android:text="实付:"/>

        <TextView
            android:id="@+id/pay_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="￥14"
            android:textColor="#0775e0"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="其他信息"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_number"
            android:layout_marginTop="10dp"
            android:text="订单编号"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_numbervalue"
            android:layout_toRightOf="@id/order_number"
            android:layout_alignTop="@id/order_number"
            android:layout_marginLeft="25dp"
            android:text="2343546"/>

        <View
            android:id="@+id/one_line"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_below="@id/order_number"
            android:background="@color/view_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_timetv"
            android:layout_below="@id/one_line"
            android:layout_marginLeft="15dp"
            android:text="下单时间"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_timevalue"
            android:layout_below="@id/one_line"
            android:layout_toRightOf="@id/order_timetv"
            android:layout_alignLeft="@id/order_numbervalue"
            android:text="2017-05-07 20:20"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/pay_modetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/order_timetv"
            android:text="支付方式"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/pay_modevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线支付"
            android:layout_alignTop="@id/pay_modetv"
            android:layout_toRightOf="@id/pay_modetv"
            android:layout_alignLeft="@id/order_numbervalue"/>

        <TextView
            android:id="@+id/station_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_modetv"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="加油站名字"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/station_namevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_modetv"
            android:layout_alignTop="@id/station_nametv"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/station_nametv"
            android:text="中东加油站"
            android:layout_alignLeft="@id/order_numbervalue"/>
    </RelativeLayout>


</LinearLayout>