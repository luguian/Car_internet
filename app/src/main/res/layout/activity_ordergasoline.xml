<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0775e0">
    <ImageButton
        android:id="@+id/choosestation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:src="@drawable/back_clicked"
        android:enabled="true"/>
    <View
        android:id="@+id/choosestationline"
        android:layout_width="1px"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/choosestation_back"
        android:layout_marginLeft="8dp"
        android:background="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/choosestationline"
        android:text="选择加油站"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
    <ListView
        android:id="@+id/addgasoline_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>