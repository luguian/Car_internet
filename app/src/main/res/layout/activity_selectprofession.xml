<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0775e0">
    <ImageButton
        android:id="@+id/professback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:src="@drawable/back_clicked"
        android:enabled="true"/>
    <View
        android:id="@+id/professline"
        android:layout_width="1px"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/professback"
        android:layout_marginLeft="8dp"
        android:background="#FFFFFF"/>
    <TextView
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/professline"
        android:text="职业"
        android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/save_professionbtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#3bb0f8"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:visibility="gone"

            />
</RelativeLayout>

    <ListView
        android:id="@+id/profession_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:divider="@null">
    </ListView>

</LinearLayout>