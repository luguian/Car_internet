<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/edit_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家和地区"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="24dp"
            android:textColor="@color/colorPrimary"
            android:text="中国"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/edit_country"
            android:background="@color/bg_Gray"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"/>
        <RelativeLayout
            android:id="@+id/phone_code"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/smssdk_input_phone"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@id/view_line">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="+86"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/smssdk_input_bg"
            android:gravity="center_vertical"
            android:layout_below="@id/view_line"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/phone_code">
            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textSize="24dp"
                android:hint="请填写手机号码"/>
        </RelativeLayout>
        <Button
            android:id="@+id/commit_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_below="@id/phone_code"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="下一步"
            android:textColor="#FFFFFF"
            android:enabled="false"/>
    </RelativeLayout>

</LinearLayout>