<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/carmessagdetailshead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0775e0">
        <ImageButton
            android:id="@+id/carmessagdetailsheadback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:src="@drawable/back_clicked"
            android:enabled="true"/>
        <View
            android:id="@+id/carmessagdetailsheadline"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/carmessagdetailsheadback"
            android:layout_marginLeft="8dp"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="车辆详细信息"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/carmessagdetailsheadline"/>
    </RelativeLayout>
    <View
        android:id="@+id/carmessagdetailshead_view"
        android:layout_below="@id/carmessagdetailshead"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_bg"/>

    <RelativeLayout
        android:id="@+id/message_mileagerl"
        android:layout_below="@id/carmessagdetailshead_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="里程数"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <TextView
            android:id="@+id/message_mileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/darkgrey"
            android:text="未录入" />

        <ImageView
            android:id="@+id/message_mileagestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/normal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />




        <View

            android:layout_below="@id/message_mileage"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_gasolinerl"
        android:layout_below="@id/message_mileagerl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="油量"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <TextView
            android:id="@+id/message_gasoline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/darkgrey"
            android:text="未录入"

            />

        <ImageView
            android:id="@+id/message_gasolinestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/normal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_below="@id/message_gasoline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_motor_performancerl"
        android:layout_below="@id/message_gasolinerl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="变速器"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <TextView
            android:id="@+id/message_motor_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:textColor="@color/darkgrey"
            android:text="未录入"

            />

        <ImageView
            android:id="@+id/message_motor_performancestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/normal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_below="@id/message_motor_performance"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_motor_transmissionrl"
        android:layout_below="@id/message_motor_performancerl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="发动机"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <TextView
            android:id="@+id/message_motor_transmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/darkgrey"
            android:text="未录入"

            />

        <ImageView
            android:id="@+id/message_motor_transmissionstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/normal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_below="@id/message_motor_transmission"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_lamprl"
        android:layout_below="@id/message_motor_transmissionrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="车灯"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <TextView
            android:id="@+id/message_lamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/darkgrey"
            android:text="未录入"

            />
        <ImageView
            android:id="@+id/message_lampstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/normal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:id="@+id/save_line"
        android:layout_below="@id/message_lamprl"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/view_bg"/>
    <RelativeLayout
        android:id="@+id/car_updatedetailmessagerl"
        android:layout_below="@id/save_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_clicked">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="录入车辆信息"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <ImageView
            android:id="@+id/car_updatedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/update_carmessage"

            />

        <View
            android:layout_below="@id/car_updatedetails"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/save_detailmessagerl"
        android:layout_below="@id/save_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_clicked"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="保存车辆信息"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#BF000000"
            />

        <ImageView
            android:id="@+id/save_updatedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/update_carmessage"

            />

        <View
            android:layout_below="@id/save_updatedetails"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/view_bg"/>
    </RelativeLayout>




</RelativeLayout >